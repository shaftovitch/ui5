<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" controllerName="zapp.controller.Page3"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="detail" title="Detail Product" class="sapUiStdPage">
		
			<f:SimpleForm id="SimpleFormChange354" 
			editable="false"
			layout="ResponsiveGridLayout"
			title="{ProductId}">
				<f:content>
					<Label text="Name" />
					<Input id="name" value="{Name}" />
					<Label text="Description" />
					<Input id="description" value="{Description}" />
				</f:content>	
			</f:SimpleForm>
			
		
	</Page>
</mvc:View>